pipeline {
    agent any

    tools {
        nodejs "node_22"
    }

    environment {
        ENV_NAME = "dev"
        BASE_URL = credentials('BASE_URL_DEV')
        TYPE = "ui"
        USER = credentials('USER_DEV')
        PASSWORD = credentials('PASSWORD_DEV')
    }

    stages {
        stage('Create environment file') {
            steps {
                sh """
                echo "BASE_URL=${BASE_URL}"   > .env.${ENV_NAME}
                echo "TYPE=${TYPE}"          >> .env.${ENV_NAME}
                echo "USER=${USER}"          >> .env.${ENV_NAME}
                echo "PASSWORD=${PASSWORD}"  >> .env.${ENV_NAME}
                """
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run UI tests') {
            steps {
                sh 'npm run test:ui-dev'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}